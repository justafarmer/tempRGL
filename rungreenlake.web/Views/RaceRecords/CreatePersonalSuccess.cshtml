@model rungreenlake.Models.RaceRecord

@{
    ViewData["Title"] = "Race Time Entry Successful";
}

<h2>You have succesfully added a new race time!</h2>
<div>
    <table class="table">
        <tr>
            <th>Time Entry ID</th>
            <th>Race Type</th>
            <th>Total Race Time</th>
            <th>One Mile Time</th>
        </tr>
        <tr>
            <td>
                @Model.RaceRecordID
            </td>
            @switch (@Model.RaceType)
            {
                case 1:
                    <td>One Mile</td>
                    break;
                case 2:
                    <td>5 kilometer</td>
                    break;
                case 3:
                    <td>10 kilometer</td>
                    break;
                case 4:
                    <td>Half Marathon</td>
                    break;
                case 5:
                    <td>Full Marathon</td>
                    break;
                default:
                    <td>Invalid Race Type</td>
                    break;
            }
            <td>
                @String.Format("{0:00}:{1:00}:{2:00}", @Model.RaceTime / 3600, ((@Model.RaceTime % 3600) / 60), ((@Model.RaceTime % 3600) % 60))
            </td>
            <td>
                @String.Format("{0:00}:{1:00}", @Model.MileTime / 60, @Model.MileTime % 60)
            </td>
        </tr>
    </table>
</div>
<div>
    <a asp-action="EditPersonal" asp-route-id="@Model.RaceRecordID">Edit</a> |
    <a asp-controller="RaceRecords" asp-action="DeletePersonal" asp-route-id="@Model.RaceRecordID">Delete</a> |
    <a asp-action="Index" asp-controller="Profiles" asp-route-show="myracerecords">Back to Personal Race Times</a>
</div>