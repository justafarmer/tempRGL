@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Firstname"></label>
                <input asp-for="Input.Firstname" class="form-control" />
                <span asp-validation-for="Input.Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Lastname"></label>
                <input asp-for="Input.Lastname" class="form-control" />
                <span asp-validation-for="Input.Lastname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.RaceType">Race Type:</label>
                <select asp-for="Input.RaceType" asp-items="@Model.RaceTypeList">
                    <option>Select Race Type</option>
                </select>
                <span asp-validation-for="Input.RaceType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.RaceTimeHours"></label>
                <input asp-for="Input.RaceTimeHours" class="form-control" />
                <span asp-validation-for="Input.RaceTimeHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.RaceTimeMinutes"></label>
                <input asp-for="Input.RaceTimeMinutes" class="form-control" />
                <span asp-validation-for="Input.RaceTimeMinutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.RaceTimeSeconds"></label>
                <input asp-for="Input.RaceTimeSeconds" class="form-control" />
                <span asp-validation-for="Input.RaceTimeSeconds" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
